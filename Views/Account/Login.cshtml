@model TaskAuthenticationAuthorization.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<h1>Log in</h1>

<form asp-action="Login" asp-controller="Account">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div>
            <div class="form-group">
                <label asp-for="Email" class="control-label">Enter Email</label><br />
                <input type="text" asp-for="Email" class="form-control"/>
                <span asp-validation-for="Email" class="text-danger" />
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label">Enter Password</label><br />
                <input type="password" asp-for="Password" class="form-control"/>
                <span asp-validation-for="Password" class="text-danger" />
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-outline-dark"/>
            </div>
        </div>
</form>